class Solution {
    public int longestContinuousSubstring(String s) {
        int ans =1;
        int left =0;
        for(int right=1; right<s.length(); right++){
            if(s.charAt(right)-s.charAt(right-1)==1){
                ans = Math.max(ans, right-left+1);
            }
            else{
                left = right;
            }    
        }
        return ans;
    }
}
