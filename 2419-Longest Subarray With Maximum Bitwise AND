class Solution {
    public int longestSubarray(int[] nums) {
        int maxEle= 0;
        for(int i=0; i<nums.length; i++){
            maxEle = Math.max(nums[i],maxEle);
        }

        int curr=0; int longest=0;
        for(int i=0; i<nums.length; i++){
            if(nums[i]==maxEle){
                curr++;
                longest = Math.max(curr, longest);

            }
            else{
                curr=0;
            }
        }
        return longest;

    }
}
